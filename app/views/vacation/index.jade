
extends ../shared/template
block content
    .row
      .col-xs-4
        #map
      .col-xs-8
        table(class='table table-bordered')
          thead
            th Name
            th Start
            th End
            th Lat
            th Lng
          tbody
          each vacation in vacations
            tr
              td= vacation.name
              td= moment(vacation.start).format('dddd, MMM Do YYYY')
              td= moment(vacation.end).format('dddd, MMM Do YYYY')
              td= vacation.lat.toFixed(2)
              td= vacation.lng.toFixed(2)

block scripts
  script(src='/js/user/vacations.js')
